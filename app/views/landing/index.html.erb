<center>
  <h1>Messages</h1>
    <%= form_for @message, remote: true do |f| %>
    <div class=col-sm-6>
      <div class="form-group cl-2">
      <%= f.text_field :content, class: "form-control", placeholder: "Type Here..."%>
      <%= f.hidden_field :receiver, value: params[:user_id]%>
    </div>
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "back", root_path, class: "btn btn-success" %>
  <% end %>

  <table class="table table-hover">
    <tr>
      <th>ID</th>
      <th>Message</th>
      <th>Sender</th>
      <th>Receiver</th>
    </tr>
    <div id="msg">
    </div>
    <% @messages.each do |msg| %>
      <tr>
        <td><%= msg.id %></td>
        <td ><%= msg.content %></td>
        <td><%= msg.user.email %></td>
        <td><%= User.where(id: msg.receiver).first.email if msg.receiver%></td>
      </tr>
    <% end %>
  </table>

</center>